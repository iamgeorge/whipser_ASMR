{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Flask App (BackEnd/app.py)",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/BackEnd/app.py",
        "cwd": "${workspaceFolder}/BackEnd",
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--no-debugger",
          "--no-reload"
        ],
        "jinja": true
      }
    ]
  }
  